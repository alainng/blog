<div class="container">
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= form_tag author_sessions_path, method: :post do %>
    <div class="field">
      <%= label_tag :email %>
      <br/>
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <br/>
      <%= password_field_tag :password%>
    </div>
    </br>
    <div class="actions">
      <%= submit_tag "Login", class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>

</div>
