<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <p class="flash">
      <%= flash.notice %>
    </p>
    <div id="container">
      <div id="content">

        <%= yield %>
      </div>

    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
